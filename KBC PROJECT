]

amountlist = [100, 200, 300, 600, 1200, 2400]
helpline = {
    "A": "help by friend",
    "B": "50/50",
    "C": "audience pool",
    "D": "call by a specialist"
}
helpline_used = False
x = 0
total = 0
all_correct = True
for q in questionlist:
    print(
        f"apke samne pesh hai  question{x+1} for amount {amountlist[x]}:\n", q["question"])

    for option in q["option"]:
        print(option)
    if not helpline_used:
        print("press H to use helpline")

    user_input = input('chose your answer from A B C D or H:').upper()
    if (user_input == "H" and not helpline_used):
        helpline_used = True
        print("available helplines: ")
        for key, value in helpline.items():
            print(key, value)
        help_choice = input("choose helpline  A B C or D: ")
        if help_choice in helpline:
            print("you selected:", helpline[help_choice])
        else:
            print("invalid helpline choice")
        user_input = input("chose your answer A B C  or D").upper()
    if (user_input == q["correctanswer"]):
        total = total+amountlist[x]

        print(
            f" Badhai ho {n} ji aapka winning amount hai{amountlist[x]} \n to aage badhte hai  next question or ")
    else:
        print("galat answer")
        break
    x += 1
if (all_correct and x == len(questionlist)):
