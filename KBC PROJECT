n = input('enter from user : ')
questionlist = [
    {"question": "who is the father of india ?",
     "option": ["A . mamta", "B. MAHATMAGANDHI", "C. raga", "D. m modi"],
     "correctanswer": "B"},
    {"question": "who is current pm of india", "option": ["A. yodi ji", "B. mamta didi", "C.  modi ji ", " D. aalu m sona nikalne wala"],
                 "correctanswer": "C"},
